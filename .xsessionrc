#!/usr/bin/env bash
#
GDK_DPI_SCALE=0.75
PATH=~/.cargo/bin:$PATH
PATH=~/.config/composer/vendor/bin:$PATH
PATH=~/.local/bin:$PATH
PATH=~/.local/bin/helpers:$PATH
PATH=~/.local/bin/helpers/apps:$PATH
PATH=~/.local/bin/helpers/statusbar:$PATH
PATH=~/.local/bin/helpers/system:$PATH
PATH=~/.local/bin/helpers/tools:$PATH
PATH=~/.local/bin/helpers/web:$PATH
PATH=~/.local/share/gem/bin:$PATH
PATH=~/.deno/bin:$PATH
PATH=~/.nvm/bin:$PATH
PATH=~/.yarn/bin:$PATH
PATH=~/go/bin:$PATH

xsetroot -cursor_name left_ptr &
if command -v syndaemon; then
  syndaemon -i 0.5 -d
fi

dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY
xset r rate 300 50 &	# Speed xrate up
setxkbmap -layout gb,ru -model pc105 -option grp:win_space_toggle
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/Xresources &
echo "xsessionrc loaded" > /tmp/.xsessionrc.log

